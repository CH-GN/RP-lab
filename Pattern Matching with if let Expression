fn check_number(num: Option<i32>) {
    if let Some(x) = num {
        if x > 0 {
            println!("The number {} is positive.", x);
        } else if x < 0 {
            println!("The number {} is negative.", x);
        } else {
            println!("The number is zero.");
        }
    } else {
        println!("No value provided.");
    }
}

fn main() {
    let number = Some(-5);
    check_number(number);
}
